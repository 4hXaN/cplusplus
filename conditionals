

#include <iostream>
using namespace std;

int main() {
    int physics, maths, cs, total = 300, obtained, classs;
    float percent, average;
    char name[50];

    cout << "Enter Your Name: ";
    cin >> name;
    cout << "\n";

    cout << "Enter Your Class: ";
    cin >> classs;
    cout << "\n";
    
    cout << "Enter Marks In Physics: ";
    cin >> physics;
    cout << "\n";

    cout << "Enter Marks In Maths: ";
    cin >> maths;
    cout << "\n";

    cout << "Enter Marks In CS: ";
    cin >> cs;
    cout << "\n";

    obtained = physics+maths+cs;
    average = obtained/3;
    percent = (obtained / total) * 100;

    cout << "*****M.A.R.K.S.H.E.E.T*****\n";
    cout << "Name: " << name << "\n";
    cout << "Class: " << classs << "\n";
    cout << "Physics: " << physics << "/100 \n";
    cout << "Maths: " << maths << "/100 \n";
    cout << "CS: " << cs << "/100 \n";
    cout << "Total Marks: " << total << "\n";
    cout << "Obtained Marks: " << obtained << "\n";
    cout << "Average Marks: " << average << "\n";
    cout << "Percentage: " << percent << "%\n";

    

    if (percent >= 80) {
        cout << "Congratulations You Got A+";
    }
    else if (percent >= 70) {
        cout << "You Got A Grade :)";
    }
    else if (percent >= 60) {
        cout << "You Got B Grade :|";
    }
    else if (percent >= 50) {
        cout << "You Got C Grade";
    }
    else
    cout << "You Are Failed :(";
        

    
    
    return 0;
}
